<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              android:id="@+id/llAddNote"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context="com.notet.activity.AddNoteActivity">

    <GridView
        android:id="@+id/grid_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="3"/>
    <TextView
        android:id="@+id/txtCreatedDate"
        android:layout_marginStart="200dp"
        android:text="10/10/2014 09:10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:hint="Title"
        android:id="@+id/txtAddTitle">

        <requestFocus/>
    </EditText>

    <EditText
        android:textSize="16dp"
        android:hint="Note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtAddContent"/>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_action_alarms2"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtAlarm"
            android:text="Alarm"
            android:layout_marginTop="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/llAlarm"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spDate"
                android:layout_width="110dp"
                android:layout_height="40dp"></Spinner>

            <Spinner
                android:id="@+id/spTime"
                android:layout_width="100dp"

                android:layout_height="40dp"></Spinner>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btnCancel"
                android:src="@drawable/ic_action_cancel"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/txtVgetAlarm"
              android:textSize="18dp"/>
</LinearLayout>
